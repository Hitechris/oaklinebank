  <!-- Top Left: Dark Mode Toggle -->
  <div class="top-controls-left">
    <button class="btn-darkmode" aria-label="Toggle dark mode" onclick="toggleDarkMode()">
      <i class="fas fa-moon"></i>
    </button>
  </div>

  <!-- Top Right: Logout -->
  <div class="top-controls-right">
    <button id="logoutBtn" class="btn btn-logout btn-sm" aria-label="Logout">
      Logout
    </button>
  </div>

  <!-- Header -->
  <div class="header-container">
    <div class="logo-placeholder" aria-label="Bank Logo"></div>
    <a href="index.html" class="bank-name">Oakline Bank</a>
  </div>

  <!-- Form container -->
  <div class="container" role="main">
    <h2 class="form-title">Open New Account</h2>
    <form id="openAccountForm" novalidate>
      <div class="mb-3">
        <label for="fullName" class="form-label">Full Name</label>
        <input type="text" id="fullName" class="form-control" required autocomplete="name" />
        <div class="invalid-feedback">Please enter your full name.</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" id="email" class="form-control" required autocomplete="email" />
        <div class="invalid-feedback">Please enter a valid email address.</div>
      </div>
      <div class="mb-3">
        <label for="accountType" class="form-label">Account Type</label>
        <select id="accountType" class="form-select" required>
          <option value="">Choose...</option>
          <option value="checking">Checking</option>
          <option value="savings">Savings</option>
        </select>
        <div class="invalid-feedback">Please select an account type.</div>
      </div>
      <div class="mb-3">
        <label for="initialDeposit" class="form-label">Initial Deposit ($)</label>
        <input type="number" id="initialDeposit" min="0" value="0" class="form-control" required />
        <div class="invalid-feedback">Please enter a valid initial deposit amount.</div>
      </div>
      <button type="submit" class="btn btn-oakline w-100">Submit for Approval</button>
    </form>
    <div id="message" role="alert" aria-live="polite">
      Application submitted. Awaiting admin approval.
    </div>
  </div>

<script src="https://www.gstatic.com/firebasejs/9.22.1/firebase-app-compat.js"></script>
<script src="https://www.gstatic.com/firebasejs/9.22.1/firebase-auth-compat.js"></script>
<script src="https://www.gstatic.com/firebasejs/9.22.1/firebase-firestore-compat.js"></script>

<script>
  // Firebase config (use your own config here)
  const firebaseConfig = {
    apiKey: "AIzaSyAr4WIWv-sCc96kABTZuzlw67NiwnqTLfo",
    authDomain: "oakline-bank.firebaseapp.com",
    projectId: "oakline-bank",
    storageBucket: "oakline-bank.firebasestorage.app",
    messagingSenderId: "199506974383",
    appId: "1:199506974383:web:3932cbd6bb2b0305b8265a",
    measurementId: "G-XXRQF2N3XB"
  };

  // Initialize Firebase
  firebase.initializeApp(firebaseConfig);
  const auth = firebase.auth();
  const db = firebase.firestore();

  const BANK_ROUTING_NUMBER = "075917864"; // Bank's permanent routing number

  // Dark mode toggle
  function toggleDarkMode() {
    document.body.classList.toggle('dark-mode');
    const icon = document.querySelector('.btn-darkmode i');
    icon.classList.toggle('fa-moon');
    icon.classList.toggle('fa-sun');
  }

  document.querySelector('.btn-darkmode').addEventListener('click', toggleDarkMode);

  // Logout button using Firebase auth
  document.getElementById('logoutBtn').addEventListener('click', () => {
    auth.signOut().then(() => {
      window.location.href = 'login.html';
    });
  });

  // Generate random 10-digit account number
  function generateRandomAccountNumber() {
    return Math.floor(1000000000 + Math.random() * 9000000000).toString();
  }

  // Form submission handler
  const form = document.getElementById('openAccountForm');

  // Wait for auth state
  auth.onAuthStateChanged(async user => {
    if (!user) {
      alert('You must be logged in to open a new account.');
      window.location.href = 'login.html';
      return;
    }

    const uid = user.uid;
    const email = user.email;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      if (!form.checkValidity()) {
        e.stopPropagation();
        form.classList.add('was-validated');
        return;
      }

      const fullName = document.getElementById('fullName').value.trim();
      const formEmail = document.getElementById('email').value.trim();
      const accountType = document.getElementById('accountType').value;
      const initialDepositRaw = document.getElementById('initialDeposit').value;
      const initialDeposit = parseFloat(initialDepositRaw);

      if (initialDepositRaw === '' || isNaN(initialDeposit) || initialDeposit < 0) {
        alert('Please enter a valid initial deposit amount.');
        return;
      }

      // Confirm email matches logged-in user
      if (formEmail.toLowerCase() !== email.toLowerCase()) {
        alert('Email does not match your logged-in email.');
        return;
      }

      try {
        // Load user data document from Firestore
        const userDocRef = db.collection('users').doc(uid);
        const userDoc = await userDocRef.get();

        let userData;
        if (userDoc.exists) {
          userData = userDoc.data();
        } else {
          // Initialize user data if not exists
          userData = {
            balances: { checking: 0, savings: 0 },
            transactions: [],
            accountInfo: {
              checking: { accountNumber: '', routingNumber: '' },
              savings: { accountNumber: '', routingNumber: '' }
            }
          };
          await userDocRef.set(userData);
        }

        // Check if user already has this account type
        if (
          userData.accountInfo &&
          userData.accountInfo[accountType] &&
          userData.accountInfo[accountType].accountNumber &&
          userData.accountInfo[accountType].accountNumber.trim() !== ''
        ) {
          alert(`You already have a ${accountType.charAt(0).toUpperCase() + accountType.slice(1)} account.`);
          return;
        }

        // Check for existing pending requests in Firestore 'pendingAccountOpenings' collection
        const pendingQuery = await db.collection('pendingAccountOpenings')
          .where('uid', '==', uid)
          .where('accountType', '==', accountType)
          .where('status', '==', 'Pending')
          .get();

        if (!pendingQuery.empty) {
          alert(`You already have a pending request for a ${accountType.charAt(0).toUpperCase() + accountType.slice(1)} account.`);
          return;
        }

        const confirmationMsg = `
Please confirm your details:

Full Name: ${fullName}
Email: ${formEmail}
Account Type: ${accountType.charAt(0).toUpperCase() + accountType.slice(1)}
Initial Deposit: $${initialDeposit.toFixed(2)}

Press OK to submit or Cancel to revise.
        `;

        if (!confirm(confirmationMsg)) {
          return;
        }

        // Prepare new account data
        userData.balances[accountType] += initialDeposit;
        userData.accountInfo[accountType].accountNumber = generateRandomAccountNumber();
        userData.accountInfo[accountType].routingNumber = BANK_ROUTING_NUMBER;

        // Update user data in Firestore
        await userDocRef.update(userData);

        // Add pending account opening request in Firestore
        await db.collection('pendingAccountOpenings').add({
          uid: uid,
          username: user.email.split('@')[0],
          fullName: fullName,
          email: formEmail,
          accountType: accountType,
          amount: initialDeposit,
          status: "Pending",
          date: new Date().toLocaleString()
        });

        form.reset();
        form.classList.remove('was-validated');
        document.getElementById('message').style.display = 'block';

      } catch (error) {
        console.error('Error submitting account opening request:', error);
        alert('An error occurred while submitting your request. Please try again later.');
      }
    });
  });
</script>
</body>
</html>
