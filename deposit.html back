  <div class="deposit-container bg-white p-4 shadow-sm rounded">
    <h4 class="mb-4">Deposit Funds</h4>
    <form id="depositForm">
      <div class="mb-3">
        <label for="depositAccount" class="form-label">Select Account</label>
        <select id="depositAccount" class="form-select" required>
          <option value="">-- Choose Account --</option>
          <option value="checking">Checking</option>
          <option value="savings">Savings</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="depositAmount" class="form-label">Amount ($)</label>
        <input type="number" class="form-control" id="depositAmount" required min="1" />
      </div>
      <div class="mb-3">
        <label for="depositNote" class="form-label">Note (optional)</label>
        <input type="text" class="form-control" id="depositNote" placeholder="e.g. Paycheck, Bonus, etc." />
      </div>
      <button type="submit" class="btn btn-primary w-100">Make Deposit</button>
    </form>
    <div id="depositSuccess" class="alert alert-success mt-3 d-none">
      Deposit successful! Redirecting...
    </div>
  </div>

  <script>
    document.getElementById('depositForm').addEventListener('submit', function (e) {
      e.preventDefault();

      const accountType = document.getElementById('depositAccount').value;
      const amount = parseFloat(document.getElementById('depositAmount').value);
      const note = document.getElementById('depositNote').value.trim();
      const date = new Date().toLocaleString();
      const transactionId = "TX" + Math.floor(1000000 + Math.random() * 9000000);

      if (!accountType || amount <= 0) {
        alert("Please fill all required fields correctly.");
        return;
      }

      let balances = JSON.parse(localStorage.getItem('accountBalances')) || { checking: 0, savings: 0 };
      balances[accountType] += amount;
      localStorage.setItem('accountBalances', JSON.stringify(balances));

   const transaction = {
  type: "Deposit",
  amount: amount,
  date: date,
  account: accountType,
  description: `Deposit to ${accountType} account ${note ? `(${note})` : ""}`,
  reference: transactionId,   // <--- Changed here
  note: note
};

      const transactions = JSON.parse(localStorage.getItem('transactions')) || [];
      transactions.push(transaction);
      localStorage.setItem('transactions', JSON.stringify(transactions));
      localStorage.setItem('latestTransaction', JSON.stringify(transaction));

      document.getElementById('depositForm').reset();
      document.getElementById('depositSuccess').classList.remove('d-none');

      setTimeout(() => {
        window.location.href = "confirmation.html";
      }, 1500);
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
