  <div class="withdrawal-container bg-white p-4 shadow-sm rounded">
    <h4 class="mb-4">Withdraw Funds</h4>
    <form id="withdrawalForm">
      <div class="mb-3">
        <label for="withdrawAccount" class="form-label">Select Account</label>
        <select id="withdrawAccount" class="form-select" required>
          <option value="">-- Choose Account --</option>
          <option value="checking">Checking</option>
          <option value="savings">Savings</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="withdrawAmount" class="form-label">Amount ($)</label>
        <input type="number" class="form-control" id="withdrawAmount" required min="1" />
      </div>
      <div class="mb-3">
        <label for="withdrawNote" class="form-label">Note (optional)</label>
        <input type="text" class="form-control" id="withdrawNote" placeholder="e.g. ATM, Rent, etc." />
      </div>
      <button type="submit" class="btn btn-primary w-100">Withdraw</button>
    </form>
    <div id="withdrawSuccess" class="alert alert-success mt-3 d-none">
      Withdrawal successful! Redirecting...
    </div>
  </div>

<script>
  document.getElementById('withdrawalForm').addEventListener('submit', function (e) {
    e.preventDefault();

    const accountType = document.getElementById('withdrawAccount').value;
    const amount = parseFloat(document.getElementById('withdrawAmount').value);
    const note = document.getElementById('withdrawNote').value.trim();
    const date = new Date().toLocaleString();
    const reference = "TX" + Math.floor(1000000 + Math.random() * 9000000); // âœ… Define reference properly

    if (!accountType || amount <= 0) {
      alert("Please complete all required fields.");
      return;
    }

    let balances = JSON.parse(localStorage.getItem('accountBalances')) || { checking: 0, savings: 0 };
    if (amount > balances[accountType]) {
      alert("Insufficient balance in selected account.");
      return;
    }

    balances[accountType] -= amount;
    localStorage.setItem('accountBalances', JSON.stringify(balances));

    const transaction = {
      type: "Withdrawal",
      amount: amount,
      date: date,
      account: accountType,
      from: accountType.charAt(0).toUpperCase() + accountType.slice(1),
      note: note,
      reference: reference,
      description: `Withdrawal from ${accountType} account ${note ? `(${note})` : ""}`
    };

    const transactions = JSON.parse(localStorage.getItem('transactions')) || [];
    transactions.push(transaction);
    localStorage.setItem('transactions', JSON.stringify(transactions));
    localStorage.setItem('latestTransaction', JSON.stringify(transaction));

    document.getElementById('withdrawalForm').reset();
    document.getElementById('withdrawSuccess').classList.remove('d-none');

    setTimeout(() => {
      window.location.href = "confirmation.html";
    }, 1500);
  });
</script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
