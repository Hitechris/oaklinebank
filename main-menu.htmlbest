<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Oakline Bank - Main Menu</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
  <style>
    /* Your existing styles here */
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f4f6f9;
      color: #333;
      margin: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    .dark-mode {
      background-color: #121212;
      color: #eee;
    }
    .dark-mode .card, .dark-mode .feature-card {
      background-color: #1e1e1e;
      color: #eee;
      box-shadow: none;
    }
    .header {
      background-color: #004080;
      color: white;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 1rem;
    }
    .header a.bank-name {
      font-size: 1.8rem;
      font-weight: 700;
      color: white;
      text-decoration: none;
    }
    .dark-mode .header {
      background-color: #00264d;
    }
    #welcomeUser {
      font-weight: 600;
      font-size: 1.1rem;
      margin-right: auto;
      color: #d6e9ff;
    }
    .dark-mode #welcomeUser {
      color: #a0c8ff;
    }
    .btn-toggle-dark {
      background: transparent;
      border: 1.5px solid white;
      color: white;
      border-radius: 4px;
      padding: 0.3rem 0.8rem;
      font-size: 0.9rem;
      transition: background-color 0.3s ease;
      cursor: pointer;
    }
    .btn-toggle-dark:hover {
      background-color: rgba(255 255 255 / 0.15);
      color: white;
    }
    .dark-mode .btn-toggle-dark {
      border-color: #99ccff;
      color: #99ccff;
    }
    .dark-mode .btn-toggle-dark:hover {
      background-color: rgba(153 204 255 / 0.25);
      color: #ccddff;
    }
    main {
      max-width: 980px;
      margin: 2rem auto 3rem;
      padding: 0 1rem;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }
    .search-bar {
      display: flex;
      align-items: center;
      max-width: 400px;
      margin-bottom: 1rem;
    }
    .search-bar input {
      flex-grow: 1;
      padding: 0.4rem 0.75rem;
      border: 1.5px solid #004080;
      border-radius: 6px 0 0 6px;
      font-size: 1rem;
    }
    .search-bar button {
      background-color: #004080;
      border: none;
      padding: 0.45rem 1rem;
      color: white;
      font-size: 1rem;
      border-radius: 0 6px 6px 0;
      cursor: pointer;
      transition: background-color 0.2s ease;
    }
    .search-bar button:hover {
      background-color: #00264d;
    }
    .dark-mode .search-bar input {
      background-color: #222;
      color: #eee;
      border-color: #66b2ff;
    }
    .dark-mode .search-bar button {
      background-color: #66b2ff;
      color: #004080;
    }
    .dark-mode .search-bar button:hover {
      background-color: #99ccff;
      color: #00264d;
    }
    .section-title {
      font-weight: 700;
      color: #004080;
      border-bottom: 2px solid #004080;
      padding-bottom: 0.3rem;
      margin-bottom: 1rem;
      font-size: 1.3rem;
    }
    .dark-mode .section-title {
      color: #99ccff;
      border-color: #99ccff;
    }
    .feature-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 1.3rem;
    }
    .feature-card {
      background: white;
      border-radius: 10px;
      box-shadow: 0 1px 4px rgb(0 0 0 / 0.1);
      padding: 1.5rem 1rem;
      text-align: center;
      cursor: pointer;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      user-select: none;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      position: relative;
      outline-offset: 3px;
      text-decoration: none;
      color: inherit;
    }
    .feature-card:hover,
    .feature-card:focus {
      box-shadow: 0 6px 15px rgb(0 0 0 / 0.2);
      transform: translateY(-4px);
      outline: none;
    }
    .feature-card i {
      font-size: 3rem;
      color: #004080;
    }
    .dark-mode .feature-card i {
      color: #66b2ff;
    }
    .feature-card span {
      font-weight: 600;
      font-size: 1.05rem;
      color: #004080;
    }
    .dark-mode .feature-card span {
      color: #99ccff;
    }
    /* Notification badge */
    .badge-notify {
      position: absolute;
      top: 8px;
      right: 15px;
      background: #dc3545;
      color: white;
      font-size: 0.7rem;
      font-weight: 700;
      padding: 2px 6px;
      border-radius: 12px;
      user-select: none;
    }
    footer {
      background-color: #004080;
      color: white;
      text-align: center;
      padding: 1rem 0;
      margin-top: auto;
      font-size: 0.9rem;
    }
  </style>
</head>
<body>

  <header class="header" role="banner">
    <a href="dashboard.html" class="bank-name" aria-label="Oakline Bank Home">Oakline Bank</a>
    <span id="welcomeUser" aria-live="polite" aria-atomic="true">Welcome, User</span>
    <button id="darkModeToggle" class="btn-toggle-dark" aria-pressed="false" aria-label="Toggle dark mode">
      <i class="fas fa-moon"></i> Dark Mode
    </button>
  </header>

  <main role="main" aria-label="Main menu features and options">

    <form class="search-bar" role="search" aria-label="Search banking features" onsubmit="return false;">
      <input type="search" id="searchInput" placeholder="Search features..." aria-label="Search features" autocomplete="off" />
      <button type="button" id="clearSearch" aria-label="Clear search"><i class="fas fa-times"></i></button>
    </form>

    <!-- Feature cards will go here (part 2) -->

  </main>

  <footer role="contentinfo">
    <div class="container text-center py-3 small text-muted">
      &copy; 2025 Oakline Bank. All Rights Reserved.
    </div>
  </footer>

  <!-- Firebase and script imports in part 2 -->
  <!-- Feature Cards HTML -->
  <section aria-labelledby="accountMgmtTitle">
    <h2 class="section-title" id="accountMgmtTitle">Account Management</h2>
    <div class="feature-grid" id="accountMgmtFeatures">
      <a href="dashboard.html" class="feature-card" role="link" tabindex="0" data-bs-toggle="tooltip" title="View your dashboard summary">
        <i class="fas fa-tachometer-alt" aria-hidden="true"></i>
        <span>Dashboard</span>
      </a>
      <a href="profile.html" class="feature-card" role="link" tabindex="0" data-bs-toggle="tooltip" title="View and update your profile">
        <i class="fas fa-user" aria-hidden="true"></i>
        <span>Profile</span>
      </a>
      <a href="settings.html" class="feature-card" role="link" tabindex="0" data-bs-toggle="tooltip" title="Update account and security settings">
        <i class="fas fa-cog" aria-hidden="true"></i>
        <span>Settings</span>
      </a>
      <a href="security.html" class="feature-card" role="link" tabindex="0" data-bs-toggle="tooltip" title="Manage security options like 2FA and password">
        <i class="fas fa-shield-alt" aria-hidden="true"></i>
        <span>Security</span>
      </a>
      <a href="notifications.html" class="feature-card position-relative" role="link" tabindex="0" data-bs-toggle="tooltip" title="View your notifications">
        <i class="fas fa-bell" aria-hidden="true"></i>
        <span>Notifications</span>
        <span class="badge-notify" id="notifBadge" aria-label="Unread notifications count">3</span>
      </a>
    </div>
  </section>

  <!-- Add other feature sections as needed... -->

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Firebase SDKs -->
  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.1.0/firebase-app.js";
    import { getAuth, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/10.1.0/firebase-auth.js";

    const firebaseConfig = {
      apiKey: "YOUR_API_KEY",
      authDomain: "YOUR_AUTH_DOMAIN",
      projectId: "YOUR_PROJECT_ID",
      storageBucket: "YOUR_STORAGE_BUCKET",
      messagingSenderId: "YOUR_MESSAGING_SENDER_ID",
      appId: "YOUR_APP_ID",
      measurementId: "YOUR_MEASUREMENT_ID"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);

    // Show current user or redirect if not logged in
    onAuthStateChanged(auth, (user) => {
      if (user) {
        // User is signed in
        document.getElementById('welcomeUser').textContent = `Welcome, ${user.displayName || user.email}`;
      } else {
        // Not signed in â€” redirect to login page
        window.location.href = 'login.html';
      }
    });

    // Dark mode toggle logic
    const darkToggleBtn = document.getElementById('darkModeToggle');
    darkToggleBtn.addEventListener('click', () => {
      document.body.classList.toggle('dark-mode');
      const isDark = document.body.classList.contains('dark-mode');
      darkToggleBtn.setAttribute('aria-pressed', isDark);
      darkToggleBtn.innerHTML = isDark
        ? '<i class="fas fa-sun"></i> Light Mode'
        : '<i class="fas fa-moon"></i> Dark Mode';
    });

    // Tooltip init
    const tooltipTriggerList = [...document.querySelectorAll('[data-bs-toggle="tooltip"]')];
    tooltipTriggerList.forEach(t => new bootstrap.Tooltip(t));

    // Clear search input
    document.getElementById('clearSearch').addEventListener('click', () => {
      const input = document.getElementById('searchInput');
      input.value = '';
      filterFeatures('');
      input.focus();
    });

    // Filter feature cards based on search
    document.getElementById('searchInput').addEventListener('input', e => {
      filterFeatures(e.target.value);
    });

    function filterFeatures(query) {
      query = query.toLowerCase();
      const cards = document.querySelectorAll('.feature-card');
      cards.forEach(card => {
        const text = card.textContent.toLowerCase();
        card.style.display = text.includes(query) ? '' : 'none';
      });
    }
  </script>
  
</body>
</html>
