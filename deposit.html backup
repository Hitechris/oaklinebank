<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Deposit Funds - Oakline Bank</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f8f9fa;
      padding: 2rem;
    }
    .form-container {
      max-width: 600px;
      margin: auto;
      background: white;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }
    .hidden {
      display: none;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h2 class="mb-4 text-center">Deposit Funds</h2>
    <form id="depositForm">
      <div class="mb-3">
        <label for="accountType" class="form-label">Select Account</label>
        <select class="form-select" id="accountType" required>
          <option value="">Choose account...</option>
          <option value="checking">Checking</option>
          <option value="savings">Savings</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="depositAmount" class="form-label">Amount ($)</label>
        <input type="number" class="form-control" id="depositAmount" min="1" required />
      </div>

      <div class="mb-3">
        <label for="depositMethod" class="form-label">Deposit Method</label>
        <select class="form-select" id="depositMethod" required>
          <option value="">Select method...</option>
          <option value="Cash">Cash</option>
          <option value="Bank Transfer">Bank Transfer</option>
          <option value="Mobile Money">Mobile Money</option>
          <option value="Check">Check</option>
        </select>
      </div>

      <div id="senderFields" class="hidden">
        <div class="mb-3">
          <label for="senderName" class="form-label">Sender Name</label>
          <input type="text" class="form-control" id="senderName" />
        </div>
        <div class="mb-3">
          <label for="senderAccount" class="form-label">Sender Account Number</label>
          <input type="text" class="form-control" id="senderAccount" />
        </div>
      </div>

      <button type="submit" class="btn btn-success w-100">Deposit</button>
    </form>
  </div>

  <script>
    const depositForm = document.getElementById("depositForm");
    const depositMethodSelect = document.getElementById("depositMethod");
    const senderFields = document.getElementById("senderFields");

    // Show/hide sender info based on deposit method
    depositMethodSelect.addEventListener("change", () => {
      const method = depositMethodSelect.value;
      if (method === "Bank Transfer" || method === "Mobile Money" || method === "Check") {
        senderFields.classList.remove("hidden");
      } else {
        senderFields.classList.add("hidden");
      }
    });

    depositForm.addEventListener("submit", (e) => {
      e.preventDefault();

      const accountType = document.getElementById("accountType").value;
      const amount = parseFloat(document.getElementById("depositAmount").value);
      const method = depositMethodSelect.value;
      const senderName = document.getElementById("senderName").value.trim();
      const senderAccount = document.getElementById("senderAccount").value.trim();

      if (!accountType || isNaN(amount) || amount <= 0 || !method) {
        alert("Please fill all required fields correctly.");
        return;
      }

      let balances = JSON.parse(localStorage.getItem("accountBalances")) || {
        checking: 1000,
        savings: 1000,
      };

      balances[accountType] += amount;
      localStorage.setItem("accountBalances", JSON.stringify(balances));

      const transaction = {
        type: "Deposit",
        accountType: accountType,
        amount: amount.toFixed(2),
        method: method,
        senderName: senderName || "",
        senderAccount: senderAccount || "",
        transactionId: "TX" + Date.now(),
        date: new Date().toLocaleString()
      };

      localStorage.setItem("latestTransaction", JSON.stringify(transaction));
      window.location.href = "receipt.html";
    });
  </script>
</body>
</html>
